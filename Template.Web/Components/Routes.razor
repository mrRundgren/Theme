<Router AppAssembly="typeof(Program).Assembly" AdditionalAssemblies="new[] { typeof(Client._Imports).Assembly }">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)"/>
        <FocusOnNavigate RouteData="routeData" Selector="h1"/>
    </Found>
</Router>
<Theme>
    <Layout>
        <CssFor Name="@Theming.Layout.App" class="flex w-full min-h-screen bg-white dark:bg-black text-black dark:text-white"/>
        <CssFor Name="@Theming.Layout.Body" class="flex-1"/>
        <CssFor Name="@Theming.Layout.Drawer" class="p-4 pr-3 xl:scroll-gutter w-full max-w-xs h-dvh overflow-y-auto fixed top-0 z-10 transition-transform data-[state=closed]:-translate-x-full data-[state=closed]:drop-shadow-none data-[state=open]:translate-x-0 data-[state=open]:drop-shadow-xl 2xl:block 2xl:sticky 2xl:drop-shadow-none 2xl:data-[state=closed]:translate-x-0 bg-neutral-200 dark:bg-neutral-800 text-neutral-600 dark:text-neutral-400"/>
    </Layout>
    <Colors>
        <CssFor Name="@Theming.Colors.BgDefault" class="bg-white dark:bg-black"/>
        <CssFor Name="@Theming.Colors.FgDefault" class="text-black dark:text-white"/>
        <CssFor Name="@Theming.Colors.BgEmphasis" class="bg-neutral-900 dark:bg-neutral-100"/>
        <CssFor Name="@Theming.Colors.FgEmphasis" class="text-white dark:text-black"/>
        <CssFor Name="@Theming.Colors.BgInset" class="bg-neutral-200 dark:bg-neutral-800"/>
        <CssFor Name="@Theming.Colors.FgInset" class="text-neutral-600 dark:text-neutral-400"/>
        <CssFor Name="@Theming.Colors.BgSubtle" class="bg-neutral-100 dark:bg-neutral-900"/>
        <CssFor Name="@Theming.Colors.FgSubtle" class="text-neutral-500"/>
    </Colors>
    <Buttons>
        <CssFor Name="@Theming.ButtonStyles.Base" class="h-11 rounded truncate relative font-bold flex items-center justify-center gap-6 transition-colors select-none disabled:opacity-50 disabled:pointer-events-none *:pointer-events-none"/>
        <CssFor Name="@Theming.ButtonStyles.Primary" class="px-6 ripple-light dark:ripple-dark bg-black dark:bg-white text-white dark:text-black hover:bg-neutral-800 dark:hover:bg-neutral-200"/>
        <CssFor Name="@Theming.ButtonStyles.Secondary" class="px-6 ripple-dark dark:ripple-light border-2 border-black dark:border-white bg-transparent text-inherit dark:text-inherit hover:bg-black/10 dark:hover:bg-white/10"/>
        <CssFor Name="@Theming.ButtonStyles.Danger" class="px-6 ripple-light bg-red-500 text-neutral-100 hover:bg-red-600"/>
        <CssFor Name="@Theming.ButtonStyles.Invisible" class="px-6 ripple-dark dark:ripple-light bg-transparent text-inherit dark:text-inherit hover:bg-black/10 dark:hover:bg-white/10"/>
        <CssFor Name="@Theming.ButtonStyles.Icon" class="w-11 ripple-dark dark:ripple-light bg-transparent text-inherit hover:bg-black/10 dark:text-inherit dark:hover:bg-white/10 rounded-full"/>
    </Buttons>
    <Effects>
        <CssFor Name="@Theming.Effects.Ripple" class="ripple block absolute w-full aspect-square rounded-full z-10 origin-center"/>
        <CssFor Name="@Theming.Effects.Focus" class="focus:ring-0 focus:outline focus:outline-2 focus:outline-offset-1 focus:outline-green-500"/>
    </Effects>
</Theme>